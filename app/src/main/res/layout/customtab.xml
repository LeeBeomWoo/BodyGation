<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tabimg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/select_followmenu" />

    <TextView
        android:id="@+id/tabtxt"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="@string/follow_media"
        app:layout_constraintBottom_toBottomOf="@+id/tabimg"
        app:layout_constraintStart_toEndOf="@+id/tabimg"
        app:layout_constraintTop_toTopOf="@+id/tabimg" />
</android.support.constraint.ConstraintLayout>