<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bodygate.bcns.bodygation.navigationitem.GoalFragment"
    tools:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/goal_height_layout"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_half"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/backline"
                android:orientation="horizontal"
                android:padding="5dp">

                <RadioButton
                    android:id="@+id/man_RBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/man"
                    android:textColor="@color/colorPrimary" />

                <RadioButton
                    android:id="@+id/girl_RBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/woman"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/backline"
                android:padding="5dp">

                <TextView
                    android:id="@+id/goal_height_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:paddingEnd="5dp"
                    android:paddingLeft="3dp"
                    android:text="@string/tall"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/goal_height_txtB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:autoText="false"
                    android:ems="10"
                    android:inputType="none|number"
                    android:paddingStart="30dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/my_weight_lbl2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:paddingEnd="5dp"
                    android:paddingLeft="3dp"
                    android:text="@string/myweight"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorPrimary" />

                <EditText
                    android:id="@+id/my_weight_txtB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:autoText="false"
                    android:ems="10"
                    android:inputType="none|number"
                    android:paddingStart="30dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/inbody_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBottomNavigationActiveColored"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/weight_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goal_weight_fitlbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2"
                    android:paddingStart="3dp"
                    android:singleLine="false"
                    android:text="@string/fitweight"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/backfill"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/my_weight_lbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="2"
                        android:paddingEnd="5dp"
                        android:paddingLeft="3dp"
                        android:text="@string/desweight"
                        android:textAlignment="viewEnd"
                        android:textColor="@android:color/background_light"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/goal_weight_txtB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:autoText="false"
                        android:ems="10"
                        android:inputType="number"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/background_light"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bmi_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goal_bmi_fit_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2"
                    android:paddingStart="3dp"
                    android:singleLine="false"
                    android:text="@string/fitbmi"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/goal_bmi_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/backfill"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/my_bmi_lbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:paddingLeft="3dp"
                            android:text="@string/mybmi"
                            android:textAlignment="viewEnd"
                            android:textColor="@android:color/background_light"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/my_bmi_txtB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:autoText="false"
                            android:ems="10"
                            android:inputType="number"
                            android:paddingStart="10dp"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/background_light"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/goal_bmi_lbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:paddingLeft="3dp"
                            android:text="@string/desbmi"
                            android:textAlignment="viewEnd"
                            android:textColor="@android:color/background_light"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/goal_bmi_txtB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:autoText="false"
                            android:ems="10"
                            android:inputType="number"
                            android:paddingStart="10dp"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/background_light"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fat_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goal_bodyfat_fit_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2"
                    android:paddingStart="3dp"
                    android:singleLine="false"
                    android:text="@string/fitbodyfat"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/goal_bodyfat_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/backfill"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/my_bodyfat_lbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:paddingEnd="5dp"
                            android:paddingLeft="3dp"
                            android:text="@string/mybodyfat"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_light"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/my_bodyfat_txtB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:autoText="false"
                            android:ems="10"
                            android:inputType="none|number"
                            android:paddingStart="30dp"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/background_light"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/goal_bodyfat_lbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:text="@string/mainbodyfat"
                            android:textAlignment="viewEnd"
                            android:textColor="@android:color/background_light"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/goal_bodyfat_txtB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_weight="1"
                            android:autoText="false"
                            android:ems="10"
                            android:inputType="number"
                            android:paddingStart="10dp"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_light"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/muscle_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goal_musclemass_fit_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2"
                    android:paddingStart="3dp"
                    android:singleLine="false"
                    android:text="@string/fitmusclemass"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/goal_musclemass_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/backfill"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/my_musclemass_lbl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="1dp"
                                android:layout_weight="1"
                                android:padding="1dp"
                                android:text="@string/mymusclemass"
                                android:textAlignment="viewEnd"
                                android:textColor="@android:color/background_light"
                                android:textSize="12sp" />

                            <EditText
                                android:id="@+id/my_musclemass_txtB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="1dp"
                                android:layout_weight="1"
                                android:autoText="false"
                                android:ems="10"
                                android:inputType="none|number"
                                android:padding="1dp"
                                android:textAlignment="textStart"
                                android:textColor="@android:color/background_light"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/goal_musclemass_lbl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:paddingEnd="5dp"
                                android:paddingLeft="3dp"
                                android:text="@string/desmusclemass"
                                android:textAlignment="viewEnd"
                                android:textColor="@android:color/background_light"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/goal_musclemass_txtB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:autoText="false"
                                android:ems="10"
                                android:inputType="number"
                                android:paddingStart="30dp"
                                android:textAlignment="textStart"
                                android:textColor="@android:color/background_light"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/goal_weight_musclemass_lbl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="1dp"
                                android:layout_weight="1"
                                android:padding="1dp"
                                android:text="@string/weight_musclemass"
                                android:textAlignment="viewEnd"
                                android:textColor="@android:color/background_light"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/goal_weight_musclemass_txtB"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="1dp"
                                android:layout_marginBottom="2dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:autoText="false"
                                android:ems="10"
                                android:inputType="number"
                                android:padding="1dp"
                                android:paddingStart="30dp"
                                android:textAlignment="textStart"
                                android:textColor="@android:color/background_light"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/upload_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="나의 측정기록 올리기"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>